{
  "apiVersion": "ray.io/v1",
  "kind": "RayCluster",
  "metadata": {
    "labels": {
      "helm.sh/chart": "ray-cluster-1.3.0",
      "app.kubernetes.io/instance": "raycluster",
      "app.kubernetes.io/managed-by": "Helm"
    },
    "name": "raycluster-kuberay"
  },
  "spec": {
    "headGroupSpec": {
      "rayStartParams": {},
      "serviceType": "ClusterIP",
      "template": {
        "spec": {
          "containers": [
            {
              "volumeMounts": [
                {
                  "mountPath": "/tmp/ray",
                  "name": "log-volume"
                }
              ],
              "name": "ray-head",
              "image": "rayproject/ray:2.41.0",
              "imagePullPolicy": "IfNotPresent",
              "resources": {
                "limits": {
                  "cpu": "1",
                  "memory": "2G"
                },
                "requests": {
                  "cpu": "1",
                  "memory": "2G"
                }
              }
            }
          ],
          "volumes": [
            {
              "emptyDir": {},
              "name": "log-volume"
            }
          ]
        },
        "metadata": {
          "annotations": {},
          "labels": {
            "helm.sh/chart": "ray-cluster-1.3.0",
            "app.kubernetes.io/instance": "raycluster",
            "app.kubernetes.io/managed-by": "Helm"
          }
        }
      }
    },
    "workerGroupSpecs": [
      {
        "rayStartParams": {},
        "replicas": 1,
        "minReplicas": 1,
        "maxReplicas": 3,
        "numOfHosts": 1,
        "groupName": "workergroup",
        "template": {
          "spec": {
            "containers": [
              {
                "volumeMounts": [
                  {
                    "mountPath": "/tmp/ray",
                    "name": "log-volume"
                  }
                ],
                "name": "ray-worker",
                "image": "rayproject/ray:2.41.0",
                "imagePullPolicy": "IfNotPresent",
                "resources": {
                  "limits": {
                    "cpu": "1",
                    "memory": "1G"
                  },
                  "requests": {
                    "cpu": "1",
                    "memory": "1G"
                  }
                }
              }
            ],
            "volumes": [
              {
                "emptyDir": {},
                "name": "log-volume"
              }
            ]
          },
          "metadata": {
            "labels": {
              "helm.sh/chart": "ray-cluster-1.3.0",
              "app.kubernetes.io/instance": "raycluster",
              "app.kubernetes.io/managed-by": "Helm"
            }
          }
        }
      }
    ]
  }
}
